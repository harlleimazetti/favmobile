<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
		xmlns:android="http://schemas.android.com/apk/res/android"
        id        = "com.favmobile.hccm"
        version   = "1.0.0">
    <name>FAVMobile</name>

    <description>
        FAV Mobile
    </description>

    <author href="http://www.fav-uninorte.com.br" email="harlleimazetti@gmail.com">
        FAV Mobile
    </author>

	<gap:config-file platform="android" parent="/manifest">
		<application android:debuggable="false" />
	</gap:config-file>


    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />

    <plugin name="cordova-plugin-whitelist" source="npm"/>

    <allow-navigation href="*://*.fav-uninorte.com.br/*" />
    <allow-navigation href="*://*.fav-unisul.com.br/*" />

    <allow-intent href="*://*.fav-uninorte.com.br/*" />
    <allow-intent href="*://*.fav-unisul.com.br/*" />

    <access origin="*" subdomains="true" />

    <icon src="icon.png" />

    <platform name="ios">
      <icon src="res/icon/ios/icon-57.png" width="57" height="57"/>
    <platform>

</widget>
